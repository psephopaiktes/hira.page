---
import { Image } from "astro:assets";
import { render } from "astro:content";
import BlogCard from "@/components/Blog/Card.astro";
import Share from "@/components/Blog/Share.astro";
import SVG from "@/components/SVG.astro";
import { loadCollection } from "@/components/loadCollection.ts";
import SnsLink from "@/components/ui/SnsLink.astro";
import BlogDetail from "@/layouts/BlogDetail.astro";

export async function getStaticPaths() {
  const blogCollection = await loadCollection("blog");

  return blogCollection.posts.map((post) => ({
    params: { id: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content, headings } = await render(post);

// 関連記事
const recommendCollection = await loadCollection("blog");
recommendCollection.posts = recommendCollection.posts.filter((recPost) => {
  const includesFirstTag = recPost.data.tags.includes(post.data.tags[0]);
  const isDifferentId = recPost.id !== post.id;
  return includesFirstTag && isDifferentId;
});

const followList = [
  {
    sns: "x",
    link: "https://x.com/psephopaiktes",
    title: "Xでフォロー",
  },
  {
    sns: "facebook",
    link: "https://fb.me/webablog",
    title: "Facebookでフォロー",
  },
  {
    sns: "feedly",
    link: "https://feedly.com/i/subscription/feed%2Fhttps%3A%2F%2Fhira.page%2Frss.xml",
    title: "Feedlyでフォロー",
  },
  {
    sns: "rss",
    link: "https://hira.page/rss.xml",
    title: "RSSを表示",
  },
  {
    sns: "gnews",
    link: "https://news.google.com/publications/CAAqBwgKML_jpQswl-69Aw",
    title: "Googleニュース",
  },
];
---

<BlogDetail data={post.data}>
  <article>
    <header>
      <Image
        src={post.data.cover}
        alt={post.data.title}
        transition:name={"blog-cover-" + post.id}
      />

      <div class="meta">
        <!-- <ol
          class="breadcrumb"
          itemscope=""
          itemtype="https://schema.org/BreadcrumbList"
        >
          <li
            itemprop="itemListElement"
            name="HOME"
            itemscope=""
            itemType="https://schema.org/ListItem"
          >
            <a href="/" itemprop="item">HOME</a>
            <SVG symbol="next" class="u-iconInText" />
            <meta itemprop="position" content="1" />
          </li>
          <li
            itemprop="itemListElement"
            name="ブログ一覧"
            itemscope=""
            itemType="https://schema.org/ListItem"
          >
            <a href="/blog" itemprop="item">ブログ一覧</a>
            <SVG symbol="next" class="u-iconInText" />
            <meta itemprop="position" content="2" />
          </li>
        </ol> -->

        <h1>{post.data.title}</h1>
        <p>{post.data.description}</p>

        <time datetime={post.data.date.toISOString()}>
          <SVG symbol="date" class="u-iconInText" />
          {post.data.date.toLocaleDateString("ja-JP")}
        </time>
        {
          post.data.updatedDate && (
            <time datetime={post.data.updatedDate.toISOString()}>
              <SVG symbol="update" class="u-iconInText" />
              {post.data.updatedDate.toLocaleDateString("ja-JP")}更新
            </time>
          )
        }

        <ul>
          {
            post.data.tags.map((tag) => (
              <li>
                <a class="c-tag" href={`/blog/tag=${tag}/`}>
                  <SVG symbol="tag" />
                  {tag}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </header>

    <aside>
      <div class="sticky">
        <h2>Follow Blog</h2>
        <ul class="follow">
          {
            followList.map((sns) => {
              return (
                <li>
                  <SnsLink sns={sns.sns} link={sns.link} title={sns.title} />
                </li>
              );
            })
          }
        </ul>

        <h2>Table of Contents</h2>
        <ul class="toc">
          {
            headings.map((heading) =>
              heading.depth === 2 ? (
                <li>
                  <a href={"#" + heading.id}>{heading.text}</a>
                </li>
              ) : heading.depth === 3 ? (
                <li class="sub">
                  <a href={"#" + heading.id}>{heading.text}</a>
                </li>
              ) : null,
            )
          }
        </ul>
      </div>
    </aside>

    <div class="content">
      <Content />
    </div>

    <Share post={post} />
  </article>

  <footer class="blogFooter">
    <div class="l-content">
      <h2>広告</h2>
      <div class="banner">
        <script
          is:inline
          async
          src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5055970484117246"
          crossorigin="anonymous"></script>
        <ins
          data-adtest={import.meta.env.PROD ? null : "on"}
          class="adsbygoogle"
          style="display:block"
          data-ad-format="fluid"
          data-ad-layout-key="-fb+5w+4e-db+86"
          data-ad-client="ca-pub-5055970484117246"
          data-ad-slot="4451531652"></ins>
        <script is:inline>
          (adsbygoogle = window.adsbygoogle || []).push({});
        </script>
      </div>

      {
        recommendCollection.posts.length > 0 && (
          <>
            <h2>おすすめ記事</h2>
            <ul class="recommendList">
              {recommendCollection.posts.slice(0, 5).map((post) => (
                <li>
                  <BlogCard id={post.id} data={post.data} />
                </li>
              ))}
            </ul>
          </>
        )
      }
    </div>
  </footer>
</BlogDetail>

<style lang="less">
  @import "@/styles/common.less";

  article {
    display: grid;
    padding: 64px 32px 0 80px;
    gap: 0 48px;
    grid-template-columns: 800px minmax(0, 1fr);
    grid-template-areas:
      "header aside"
      "content aside";
    @media (width < @2xl) {
      padding: 56px 24px 0 64px;
      gap: 0 56px;
      grid-template-columns: 640px minmax(0, 1fr);
    }
    @media (width < @xl) {
      gap: 0 16px;
      grid-template-columns: 100%;
      grid-template-areas:
        "header"
        "aside"
        "content";
      padding: 0;
    }
  }

  header {
    grid-area: header;

    img {
      display: block;
      border-radius: 6px;
      border: 1px solid rgb(@main / 0.05);
      background: @placeholder;
      @media (width < @xl) {
        border-radius: 24px 24px 0 0;
        border-width: 0 0 1px;
      }
      @media (width < @xs) {
        border-radius: 0;
      }
    }

    .breadcrumb {
      margin-block-start: 8px;
      display: flex;
      gap: 2px;
      opacity: 0.6;
      :global(svg) {
        opacity: 0.4;
      }
    }

    .meta {
      margin-block-start: 32px;
      @media (width < @xl) {
        padding: 0 48px;
      }
      @media (width < @md) {
        padding: 0 32px;
      }
      @media (width < @xs) {
        padding: 0 24px;
      }
    }

    h1 {
      margin-block-start: 8px;
      font-size: 2em;
    }

    time {
      font-size: 0.9em;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      gap: 0.5em;
      margin-block-start: 20px;
      margin-inline-end: 16px;
      color: rgb(@main / 0.6);
    }

    ul {
      display: flex;
      float: right;
      margin-block-start: 18px;
      gap: 6px;
      @media (width < @xs) {
        float: none;
      }
    }

    p {
      margin-block-start: 16px;
      font-size: 0.9em;
      font-weight: 400;
    }
  }

  aside {
    grid-area: aside;
    @media (width < @xl) {
      margin-inline: 48px;
      margin-block-start: 24px;
      position: relative;
      background: rgb(@theme / 0.05);
      border-radius: 6px;
      padding: 0 24px 32px;
    }
    @media (width < @md) {
      margin-inline: 32px;
    }
    @media (width < @xs) {
      margin-inline: 24px;
    }

    .sticky {
      position: sticky;
      top: 24px;
    }

    h2 {
      font-size: 18px;
      opacity: 0.2;
      &:nth-of-type(2) {
        margin-block-start: 32px;
      }
      @media (width < @xl) {
        margin-block-start: 24px !important;
      }
    }

    .follow {
      display: flex;
      gap: 4px;
      margin-block-start: 16px;
      li:nth-child(1):hover {
        color: rgb(@main);
      }
      li:nth-child(2):hover {
        color: #1876f2;
      }
      li:nth-child(3):hover {
        color: #2bb24c;
      }
      li:nth-child(4):hover {
        color: rgb(@main);
      }
      li:nth-child(5):hover {
        color: #eb4d3c;
      }
    }

    .toc {
      list-style: disc;
      border-left: 1px solid rgb(@main / 0.2);
      margin: 16px 0 0 16px;
      padding-inline-start: 13.5px;
      @media (width < @xl) {
        margin-block-start: 12px;
      }
      @media (width < @md) {
        padding-inline-start: 12px;
      }

      li.sub {
        list-style: none;
        a {
          padding-block: 6px;
          font-weight: 400;
        }
      }

      a {
        display: block;
        position: relative;
        top: -2px;
        padding-block: 8px;
        font-size: 0.8em;
        line-height: 1.4;
        opacity: 0.6;
        text-overflow: ellipsis;
        overflow: hidden;
        font-weight: 600;
        white-space: nowrap;
        @media (width < @xl) {
          padding: 4px 8px;
          margin-block-start: 4px;
          opacity: 0.7;
        }

        &:hover {
          opacity: 0.9;
        }
      }
    }
  }

  .content {
    grid-area: content;
    margin-block-start: 32px;
    @media (width < @xl) {
      padding: 0 48px;
    }
    @media (width < @md) {
      padding: 0 32px;
    }
    @media (width < @xs) {
      padding: 0 24px;
    }
  }

  .blogFooter {
    border-top: 2px dashed rgb(@theme / 0.4);
    margin-block-start: 96px;
    @media (width < @lg) {
      margin-block-start: 64px;
    }

    h2 {
      font-size: 1.4em;
      color: rgb(@label);
      margin-block-start: 64px;
    }

    .banner {
      box-shadow: 0px 8px 24px -8px rgb(@label / 0.1);
      margin-block-start: 16px;
      min-height: 160px;
      background: rgb(@main / 0.1);
      border-radius: 6px;
      overflow: hidden;
    }
  }

  .recommendList {
    filter: @filterShadow;
    margin-block-start: 16px;
    display: flex;
    gap: 8px;
    @media (width < @lg) {
      flex-wrap: wrap;
    }
    @media (width < @xs) {
      flex-wrap: nowrap;
      width: 100vw;
      margin-inline: -24px;
      padding-inline: 24px;
      scroll-padding-inline: 24px;
      overflow: scroll;
      scroll-snap-type: x mandatory;
    }

    li {
      width: calc((100% - 16px) / 3);
      @media (width < @lg) {
        width: calc(50% - 4px);
      }
      @media (width < @xs) {
        width: 240px;
        flex-shrink: 0;
        scroll-snap-align: start;
      }
      // 要素の数を調整
      @media (width >= @xs) {
        &:nth-child(n + 5) {
          display: none;
        }
      }
      @media (width >= @lg) {
        &:nth-child(n + 4) {
          display: none;
        }
      }
    }
  }
</style>
