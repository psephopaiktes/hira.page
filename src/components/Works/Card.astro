---
import SVG from "@/components/SVG.astro";
import { Image } from "astro:assets";
const { id, data } = Astro.props;
---

<a href={`/works/${id}/`} transition:name={"works-card-" + id}>
  <div class="meta">
    <h3>{data.title}</h3>
    <p>{data.description}</p>
    <ul>
      {
        data.tags.slice(0, 2).map((tag) => (
          <li class="c-tag">
            <SVG symbol="tag" />
            {tag}
          </li>
        ))
      }
    </ul>
    <time datetime={data.date.toISOString()}>
      {data.date.getFullYear()}
    </time>
  </div>

  <div class="cover c-card">
    <Image src={data.thumbnail} alt={data.title} />
  </div>
</a>

<style lang="less">
  @import "@/styles/common.less";

  a {
    clip-path: url(#squircleOuter);
    display: grid;
    aspect-ratio: 1;
    background: #cccccc33;

    @media (width >= @xs) {
      &:hover .cover {
        opacity: 0.1;
        filter: blur(4px);
      }
    }
    @media (width < @xs) {
      background: none;
    }
  }

  .meta {
    grid-area: 1/-1;
    padding: 10%;
    display: grid;
    gap: 8px;
    place-content: center;
    place-items: center;
    text-align: center;
    font-size: 12px;
    @media (width < @xs) {
      padding: 101% 5% 5%;
      gap: 2px;
    }

    h3 {
      width: 100%;
      font-size: 1.6em;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
      @media (width < @xs) {
        font-size: 1.1em;
      }
    }
    time {
      opacity: 0.6;
      line-height: 1;
      @media (width < @xs) {
        display: none;
      }
    }
    p {
      margin: 0;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
      @media (width < @xs) {
        display: none;
      }
    }
    ul {
      display: flex;
      gap: 2px;
    }
  }

  .cover {
    aspect-ratio: 1;
    clip-path: url(#squircle);
    grid-area: 1/-1;
    background: #fff;
    width: 96%;
    margin: 2%;
    transition: @transition;
  }
</style>
