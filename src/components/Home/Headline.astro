---
const { label, href } = Astro.props;
---

<h2 data-inview transition:name={"headline-" + label}>
  {
    href ? (
      <a {href}>
        <span>{label}</span>

        <small>
          more <svg-mask-icon src="/img/icon/next.svg" />
        </small>
      </a>
    ) : (
      <span>{label}</span>
    )
  }
</h2>

<style lang="less">
  @import "@/styles/common.less";

  h2 {
    position: relative; // for z-index
    margin-block-start: 64px;
    color: rgb(@label);
    @media (width < @lg) {
      margin-block-start: 48px;
      font-size: 20px;
    }
  }

  span {
    font-weight: 800;
    line-height: 1.1;
    letter-spacing: 0.05em;
    font-size: 24px;
    display: inline-block;
    &::first-letter {
      font-size: 1.2em;
    }
    &::after {
      content: ".";
      color: rgb(@theme);
      font-size: 1.4em;
    }
  }

  a small {
    display: inline-flex;
    align-items: center;
    font-size: 0.8em;
    margin-inline-start: 0.4em;
    font-variation-settings: "wght" 500;
    color: rgb(@main);
    opacity: 0.6;
    transition: @transition;
    line-height: 1;
    svg-mask-icon {
      width: 1em;
      height: 1em;
      margin-block-end: -0.35em;
    }
  }
  :is(a:hover, a:active) small {
    opacity: 1;
    color: rgb(@main / 0.9);
    font-variation-settings: "wght" 700;
  }
</style>
